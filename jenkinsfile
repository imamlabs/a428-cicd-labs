pipeline {
    agent {
        docker {
            image 'node:16-buster-slim'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') { 
            steps {
                sh './jenkins/scripts/test.sh' 
            }
        }
        stage('Manual Approval'){
            steps{
                //menunggu persetujuan secara manual
                input message:'Lanjut ke tahap Deploy?'
            }
        }
        stage('Deploy') {
            steps {
                sh './jenkins/scripts/deliver.sh'
                //user bisa tes aplikasi hanya 1 menit
                sh 'sleep 1m'
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}